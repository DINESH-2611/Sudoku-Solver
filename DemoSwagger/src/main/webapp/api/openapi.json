{
  "openapi": "3.0.0",
  "info": {
    "title": "Swagger API",
    "description": "Sample API documentation using Swagger UI",
    "version": "1.0.0"
  },
  "paths": {
    "/api/hello": {
      "get": {
        "summary": "Returns a hello world message",
        "operationId": "sayHello",
        "responses": {
          "200": {
            "description": "Hello message",
            "content": {
              "application/json": {
                "example": {
                  "message": "Hello, World!"
                }
              }
            }
          }
        }
      }
    }
  }
}
