<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <filter>
    <filter-name>RoleValidationFilter</filter-name>
    <filter-class>com.librarymanagement.servlet.RoleValidationFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>RoleValidationFilter</filter-name>
    <url-pattern>*.jsp</url-pattern><!-- Apply filter to all user pages -->
  </filter-mapping>
  <filter-mapping>
    <filter-name>RoleValidationFilter</filter-name>
    <url-pattern>*.html</url-pattern><!-- Apply filter to all user pages -->
  </filter-mapping>
</web-app>
